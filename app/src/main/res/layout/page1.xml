<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DCDCDC">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginTop="20dp"
                android:id="@+id/card">
                <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:padding="8dp"
                    android:layout_margin="10dp"
                    app:cardElevation="20dp"
                    tools:ignore="MissingConstraints">
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/head"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="35dp"
                            android:gravity="center_horizontal"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textColor="#000"
                            android:text="To be taken"/>
                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/about"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:paddingRight="30dp"
                            android:paddingLeft="5dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/head">
                            <TextView
                                android:id="@+id/Calorie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:textColor="#000"
                                android:text="Calorie"/>
                            <TextView
                                android:id="@+id/Protein"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/Calorie"
                                android:textColor="#000"
                                android:gravity="center"
                                android:textSize="18dp"
                                android:text="Protein"/>
                            <TextView
                                android:id="@+id/Fats"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/Protein"
                                android:textColor="#000"
                                android:gravity="center"
                                android:textSize="18dp"
                                android:text="Fats"/>
                            <TextView
                                android:id="@+id/Carbohydrate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:textColor="#000"
                                app:layout_constraintTop_toBottomOf="@+id/Fats"
                                android:text="Carbohydrate"/>
                        </android.support.constraint.ConstraintLayout>
                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/times"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            app:layout_constraintRight_toRightOf="parent"

                            app:layout_constraintTop_toBottomOf="@+id/head">
                            <TextView
                                android:id="@+id/v1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="18dp"
                                android:textColor="#000"
                                android:text="0"/>
                            <TextView
                                android:id="@+id/v2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/v1"
                                android:gravity="center"
                                android:textSize="18dp"
                                android:textColor="#000"
                                android:text="0"/>
                            <TextView
                                android:id="@+id/v3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/v2"
                                android:gravity="center"
                                android:textSize="18dp"
                                android:textColor="#000"
                                android:text="0"/>

                            <TextView
                                android:id="@+id/v4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/v3"
                                android:gravity="center"
                                android:textSize="18dp"
                                android:textColor="#000"
                                android:text="0"/>


                        </android.support.constraint.ConstraintLayout>


                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

            </android.support.constraint.ConstraintLayout>
            <!--<Button
                android:id="@+id/renew"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card"
                android:layout_marginTop="20dp"
                android:alpha="0.8"
                android:background="@drawable/ripple_second"
                android:text="Renew"
                android:layout_centerHorizontal="true"
                android:textColor="#fff" /> -->

            <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginTop="20dp"
                android:id="@+id/card2"
                android:layout_below="@+id/card">
                <android.support.v7.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:padding="8dp"
                    android:layout_margin="10dp"
                    app:cardElevation="20dp"
                    tools:ignore="MissingConstraints">
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/head2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="35dp"
                            android:gravity="center_horizontal"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textColor="#000"
                            android:text="Consumed"/>
                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/about2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:paddingRight="30dp"
                            android:paddingLeft="5dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/head2">
                            <TextView
                                android:id="@+id/Calorie2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:textColor="#000"
                                android:text="Calorie"/>
                            <TextView
                                android:id="@+id/Protein2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/Calorie2"
                                android:textColor="#000"
                                android:gravity="center"
                                android:textSize="18dp"
                                android:text="Protein"/>
                            <TextView
                                android:id="@+id/Fats2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/Protein2"
                                android:textColor="#000"
                                android:gravity="center"
                                android:textSize="18dp"
                                android:text="Fats"/>
                            <TextView
                                android:id="@+id/Carbohydrate2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:textColor="#000"
                                app:layout_constraintTop_toBottomOf="@+id/Fats2"
                                android:text="Carbohydrate"/>
                        </android.support.constraint.ConstraintLayout>
                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/times2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            app:layout_constraintRight_toRightOf="parent"

                            app:layout_constraintTop_toBottomOf="@+id/head2">
                            <TextView
                                android:id="@+id/v12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="18dp"
                                android:textColor="#000"
                                android:text="0"/>
                            <TextView
                                android:id="@+id/v22"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/v12"
                                android:gravity="center"
                                android:textSize="18dp"
                                android:textColor="#000"
                                android:text="0"/>
                            <TextView
                                android:id="@+id/v32"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/v22"
                                android:gravity="center"
                                android:textSize="18dp"
                                android:textColor="#000"
                                android:text="0"/>

                            <TextView
                                android:id="@+id/v42"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/v32"
                                android:gravity="center"
                                android:textSize="18dp"
                                android:textColor="#000"
                                android:text="0"/>




                        </android.support.constraint.ConstraintLayout>


                    </android.support.constraint.ConstraintLayout>

                   <!-- <Button
                        android:id="@+id/add"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:alpha="0.8"
                        android:background="@drawable/ripple_second"
                        android:text="Add"
                        android:textColor="#fff"
                        app:layout_constraintTop_toBottomOf="@+id/v42" />-->

                </android.support.v7.widget.CardView>

            </android.support.constraint.ConstraintLayout>



        </RelativeLayout>


    </ScrollView>

    <Button
        android:id="@+id/set"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:text="new"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#fff"
        android:alpha="0.8"
        android:layout_alignParentBottom="true"
        android:textStyle="bold" />
</RelativeLayout>