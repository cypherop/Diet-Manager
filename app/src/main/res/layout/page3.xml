<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Calorie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/enterCalorie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Calorie" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/Protein"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:layout_below="@+id/Calorie"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/enterProtein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Protein" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/Carbohydrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:layout_below="@+id/Protein"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/enterCarbohydrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Carbohydrate" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/Fats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:layout_below="@+id/Carbohydrate"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/enterFats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Fats" />

        <Button
            android:id="@+id/send"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:alpha="0.8"
            android:background="@drawable/ripple_second"
            android:text="Send"
            android:layout_gravity="center_horizontal"
            android:textColor="#fff" />

    </android.support.design.widget.TextInputLayout>
</RelativeLayout>